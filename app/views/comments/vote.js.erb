<% if @view = "index" %>
  $("#<%= @comment.id %>").find(".comment-votes").first().text("<%=@comment.votes%> points");
  <% case @color %>
  <% when "red" %>
    $("#<%= @comment.id %>").closest(".comment-post-box").find(".downvoted").removeClass("downvoted");
    $("#<%= @comment.id %>").closest(".comment-post-box").find(".fa-arrow-up").first().addClass("upvoted");
  <% when "purple" %>
    $("#<%= @comment.id %>").closest(".comment-post-box").find(".upvoted").removeClass("upvoted")
    $("#<%= @comment.id %>").closest(".comment-post-box").find(".fa-arrow-down").first().addClass("downvoted");
  <% when "none" %>
    $("#<%= @comment.id %>").closest(".comment-post-box").find(".upvoted").removeClass("upvoted")
    $("#<%= @comment.id %>").closest(".comment-post-box").find(".downvoted").removeClass("downvoted");
  <% end %>
<% end %>