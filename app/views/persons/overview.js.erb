$(".profile-bar-option").find(".focus").removeClass("focus");
<%case params[:view] %>
<% when "posts" %>
  $("#posts").addClass("focus");
  <% if @array.blank? %>
    $("#user-profile").html("<%=j render :partial => 'persons/empty', locals: {type: params[:view]} %>");
  <% else %>
    $("#user-profile").html("<%=j render :partial => 'persons/overview', locals: {posts: @array} %>");
  <% end %>
