	$("#home-index").html("<%=j render :partial => 'home/index', :locals => { posts: @posts } %>");
<%elsif params[:view] == 'medium'%>	
	$(".sort-bar-header").html("<%=j render :partial => 'sort_bar_index', :locals => {view: 'medium', order_sort: params[:order_sort]} %>");
